<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/accent_black">

    <ImageView
        android:id="@+id/drawer_header_app_brand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="14dp"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher_round"

        />

    <TextView
        android:id="@+id/drawer_header_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/drawer_header_app_brand"
        android:fontFamily="@font/montserrat"
        android:padding="10dp"
        android:text="UBER CLONE"
        android:textStyle="bold"
        android:textColor="@color/accent_white"
        android:textSize="20sp" />


</RelativeLayout>